# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL - Change to your actual backend endpoint
EXPO_PUBLIC_API_URL=https://your-backend.com/api

# AI Proxy URL - Change to your AI proxy server endpoint
# This should proxy OpenAI requests to keep your API key secure
EXPO_PUBLIC_AI_PROXY_URL=https://your-ai-proxy.com

# =============================================================================
# EAS Build Configuration
# =============================================================================

# EAS Project ID - Get this from your Expo dashboard
EAS_PROJECT_ID=your-eas-project-id-here

# =============================================================================
# Optional Services
# =============================================================================

# Sentry DSN for error monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode (set to 'true' for development)
EXPO_PUBLIC_DEBUG=false

# Enable analytics (set to 'true' to enable)
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# =============================================================================
# AI Configuration
# =============================================================================

# OpenAI API Key - NEVER commit this to version control!
# This should be handled by your backend/proxy server
# OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# Notification Configuration
# =============================================================================

# Firebase Cloud Messaging Server Key (for push notifications)
# FCM_SERVER_KEY=your-fcm-server-key

# =============================================================================
# Social Authentication (Optional)
# =============================================================================

# Google OAuth Client ID
# GOOGLE_CLIENT_ID=your-google-client-id

# Apple Sign In Service ID
# APPLE_SERVICE_ID=your-apple-service-id

# =============================================================================
# Third-party Integrations (Optional)
# =============================================================================

# Stripe Publishable Key (for payments)
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# Analytics Keys
# MIXPANEL_TOKEN=your-mixpanel-token
# AMPLITUDE_API_KEY=your-amplitude-key

# =============================================================================
# Security Notes
# =============================================================================

# 1. NEVER commit .env files to version control
# 2. Use EXPO_PUBLIC_ prefix for variables that need to be available in the app
# 3. Keep sensitive keys (like OpenAI API key) on your backend server
# 4. Use environment-specific values for development, staging, and production
# 5. Rotate keys regularly for security